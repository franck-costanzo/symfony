<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<!-- CSS only -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" 
		rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" 
		crossorigin="anonymous">
		{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
        {% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg bg-dark d-flex flex-row justify-content-between">
				<div class="m-3">
					<a class="h1 link-light" href={{ path('home') }}>Home</a>
				</div>
				<div class="m-3">
					{% if app.user %}
						<a class="px-2 link-light" href={{ path('app_profile')}}>Profil</a>
						<a class="px-2 link-light" href={{ path('app_logout')}}>Logout</a>
					{% else %}
						<a class="px-2 link-light" href={{ path('app_login')}}>Se connecter</a>
						<a class="px-2 link-light" href={{ path('app_register')}}>S'enregister</a>
					{% endif %}
				</div>
            </nav>
		</header>
		<div class="w-100 d-flex flex-column justify-content-center m-5">
			{% block body %}
			{% endblock %}
		</div>
	</body>
</html>
